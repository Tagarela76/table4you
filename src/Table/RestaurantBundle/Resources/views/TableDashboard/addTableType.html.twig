<form  id="table-type-form" action="{{ path('table_updateTableTypeList') }}" enctype="multipart/form-data" method="post">       
    <div class="container-fluid">   
        <div class="row-fluid"  id="fileFieldsContainer">
            <div class="row-fluid">
                <span class="span12">
                    <div class="number-tables">
                        {% trans %}main.tableMap.tableList.form.label.tableOn{% endtrans %}
                        <input type="text" class="valid-number" name="peopleCount[]" size="2"/>
                        {% trans %}main.tableMap.tableList.form.label.numberOfPlaces{% endtrans %}
                    </div>
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="input-group">
                            <div class="form-control files-download" data-trigger="fileinput">
                                <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                <span class="fileinput-filename"></span>
                            </div>
                        <span class="input-group-addon btn btn-default btn-file">
                            <span class="fileinput-new">{% trans %}main.tableMap.tableList.form.label.selectTheFile{% endtrans %}</span>
                            <input type="file" name="file[]" id="image" size="1">
                        </span>
                        </div>
                    </div>

                </span>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="load-file">
                    <a href="#" onclick="page.common.addNewFileField(); return false;">
                        {% trans %}main.tableMap.tableList.form.label.addMore{% endtrans %}
                    </a>
                    <input type="button" onClick="page.tableType.validateAddForm();" value="{% trans %}main.tableMap.tableList.form.label.load{% endtrans %}" class="but-load-file" />
                    <input type="hidden" id="peopleCountLabel" value="{% trans %}main.tableMap.tableList.form.label.tableOn{% endtrans %}" />
                    <input type="hidden" id="deleteFileIcon" value="{{ asset('bundles/tablerestaurant/images/deleteFile.png') }}" />
                    <input type="hidden" id="selectTheFileLabel" value="{% trans %}main.tableMap.tableList.form.label.selectTheFile{% endtrans %}" />
                    <input type="hidden" id="numberOfPlaces" value="{% trans %}main.tableMap.tableList.form.label.numberOfPlaces{% endtrans %}" />
                    <label class="validationError">{% trans %}main.tableMap.tableList.form.errors{% endtrans %}</label>
                </div>
            </div>
            <script>

                jQuery(".but-load-file").click(function(){
                    jQuery(".error-form").parent(".btn-file").parent(".input-group").addClass("error-input");
                });

            </script>

        </div>    
    </div>
</form>
