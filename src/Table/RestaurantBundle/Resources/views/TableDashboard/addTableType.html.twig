<form  id="table-type-form" action="{{ path('table_updateTableTypeList') }}" enctype="multipart/form-data" method="post">       
    <div class="container-fluid">   
        <div class="row-fluid"  id="fileFieldsContainer">
            <div class="row-fluid">
                <span class="span12">
                    <div class="number_tables">
                        {% trans %}main.tableMap.tableList.form.label.tableOn{% endtrans %}
                        <input type="text" name="peopleCount[]" size="2"/>
                        мест(а)
                    </div>
                    <div id="customization_name"></div>
                    <div class="customization">
                        <div>Выбрать файл</div>
                        <input type="file" name="file[]" id="customization_file" size="1">
                    </div>
                    <!--<div id="delete_file_customization"></div>-->
                </span>
            </div>    
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="load_file">
                    <a href="#" onclick="page.common.addNewFileField(); return false;">
                        {% trans %}main.tableMap.tableList.form.label.addMore{% endtrans %}
                    </a>
                    <label class="validationError">{% trans %}main.tableMap.tableList.form.errors{% endtrans %}</label>
                    <input type="button" onClick="page.tableType.validateAddForm();" value="{% trans %}main.tableMap.tableList.form.label.load{% endtrans %}" class="but_load_file" />
                    <input type="hidden" id="peopleCountLabel" value="{% trans %}main.tableMap.tableList.form.label.tableOn{% endtrans %}" />
                    <input type="hidden" id="deleteFileIcon" value="{{ asset('bundles/tablerestaurant/images/deleteFile.png') }}" />
                </div>
            </div>   
        </div>    
    </div>
</form>
<script>
    jQuery(document).ready(function() {

        jQuery('#customization_file').change(function()
        {



                jQuery('#customization_file').each(function() {
                    var name = this.value;
                    reWin = /.*\\(.*)/;
                    var fileTitle = name.replace(reWin, "$1");
                    reUnix = /.*\/(.*)/;
                    fileTitle = fileTitle.replace(reUnix, "$1");
                    jQuery('#customization_name').html(fileTitle);
                });



        });

    });
</script>