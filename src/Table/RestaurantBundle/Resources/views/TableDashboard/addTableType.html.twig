<div id="addTableTypePopup" class="modal hide" data-backdrop="static">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">X</a>
    </div>
    <div class="modal-body" >
        <form  id="table-type-form" action="{{ path('table_updateTableTypeList') }}" enctype="multipart/form-data" method="post">       
            <div class="container-fluid">   
                <div class="row-fluid"  id="fileFieldsContainer">
                    <div class="row-fluid">
                        <span class="span5">
                            {% trans %}main.tableMap.tableList.form.label.tableOn{% endtrans %}
                            <input type="text" name="peopleCount[]" size="2"/>
                        </span>    
                        <span class="span5">
                            <input type="file" name="file[]" size="30" />
                        </span>
                    </div>    
                </div>
                <div class="row-fluid">
                    <div class="span5">
                        <a href="#" onclick="page.common.addNewFileField(); return false;">
                            {% trans %}main.tableMap.tableList.form.label.addMore{% endtrans %}
                        </a>
                    </div>    
                    <div class="span5">
                        <label class="validationError">{% trans %}main.tableMap.tableList.form.errors{% endtrans %}</label>
                        <input type="button" onClick="page.tableType.validateAddForm();" value="{% trans %}main.tableMap.tableList.form.label.load{% endtrans %}" />
                        <input type="hidden" id="peopleCountLabel" value="{% trans %}main.tableMap.tableList.form.label.tableOn{% endtrans %}" />
                        <input type="hidden" id="deleteFileIcon" value="{{ asset('bundles/tablerestaurant/images/deleteFile.png') }}" />
                    </div>   
                </div>    
            </div>
        </form>    
    </div>
</div>
