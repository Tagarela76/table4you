<div id="editTableTypePopup_{{tableType.id}}" class="modal hide editTableTypePopup" data-backdrop="static">
    <div class="modal-header">
        <a class="close" data-dismiss="modal"></a>
    </div>
    <div class="modal-body" >
        <form id="edit-table-type-form_{{tableType.id}}" action="{{ path('table_editTableType') }}" enctype="multipart/form-data" method="post" class="edit-table-type-form">
            <div class="container-fluid">   
                <div class="row-fluid">
                    <div class="row-fluid">
                        <span class="span12">
                            <div class="number-tables">
                                {% trans %}main.tableMap.tableList.form.label.tableOn{% endtrans %}
                                <input type="text" name="peopleCount" size="2" value="{{tableType.peopleCount}}" class="valid-number"/>
                                {% trans %}main.tableMap.tableList.form.label.numberOfPlaces{% endtrans %}
                            </div>
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div class="input-group">
                                    <div class="form-control files-download" data-trigger="fileinput">
                                        <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                        <span class="fileinput-filename">{{tableType.fileName}}</span>
                                    </div>
                                    <span class="input-group-addon btn btn-default btn-file">
                                        <span class="fileinput-new">{% trans %}main.tableMap.tableList.form.label.selectTheFile{% endtrans %}</span>
                                        <input type="file" name="file" size="1">
                                    </span>
                                </div>
                            </div>
                        </span>
                    </div>    
                </div>
                <div class="row-fluid">
                    <label class="validationError">{% trans %}main.tableMap.tableList.form.errors{% endtrans %}</label>
                    <div class="offset9 span3">
                        <input type="button" onClick="page.tableType.validateEditForm(this);" value="{% trans %}main.tableMap.tableList.form.label.load{% endtrans %}" class="but-load-file" />
                        <input type="hidden" name="tableTypeId" value="{{tableType.id}}" />
                    </div>   
                </div>    
            </div>
        </form>    
    </div>
</div>
