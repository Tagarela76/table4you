<div class="row-fluid">    
    {% for tableMap in tableMapList %}  
        <div class="span2">
            {{tableMap.floor}} {% trans %}main.tableMap.createMap.floor{% endtrans %} 
            {% if tableMap.hall is not null %}
                {{tableMap.hall}} {% trans %}main.tableMap.createMap.hall{% endtrans %} 
            {% endif %}
            <a href='#' onclick='page.tableMap.editTableMap({{ tableMap.id }}); return false;'>
                <img src="{{ asset('bundles/tablerestaurant/images/edit_table_type_btn.png') }}" />
            </a>    
            <a href='#' onclick='page.tableMap.deleteTableMap({{ tableMap.id }}); return false;'>
                <img src="{{ asset('bundles/tablerestaurant/images/delete_table_type_btn.png') }}" />
            </a>    
        </div>
    {% endfor %}
</div>
{% if tableMapObj is not null %}
    <div class="row-fluid" style="border: 1px solid #ccc;">
        <div class="span12">
            {% trans %}main.tableMap.createMap.editRestaurant{% endtrans %} {{ tableMapObj.restaurant.name }}
            {{ tableMapObj.floor }} {% trans %}main.tableMap.createMap.floor{% endtrans %}
            {% if tableMapObj.hall is not null %}
                {{tableMapObj.hall}} {% trans %}main.tableMap.createMap.hall{% endtrans %} 
            {% endif %}
        </div>
    </div>
{% endif %}

<div class="row-fluid">
    <div class="span8" style="border: 1px solid #ccc;">
        {% if tableMapObj is not null %}
            <img src="{{baseUrl}}{{ vich_uploader_asset(tableMapObj, 'file') }}" alt="{{ tableMapObj.restaurant.name }}" />
        {% endif %}    
    </div>
    <div class="span4" style="border: 1px solid #ccc;">
        <div class="row-fluid">
            <div class="span12">
                {% trans %}main.tableMap.tableList.choiceTable{% endtrans %}
            </div>    
        </div>
        {% for tableType in tableTypeList %}  
            <div class="row-fluid" style="border: 1px solid #ccc;">
                <div class="span4">
                    <img src="{{baseUrl}}{{ vich_uploader_asset(tableType, 'file') }}" alt="{{ tableType.peopleCount }}" />
                </div>
                <div class="span6">
                    {% trans %}main.tableMap.tableList.tableOn{% endtrans %} {{ tableType.peopleCount }}
                </div>
            </div>
        {% endfor %}
        <div class="row-fluid">
            <div class="span12">
                <input type="button" value="{% trans %}main.tableMap.createMap.edit{% endtrans %}" />
            </div>    
        </div>
    </div>
</div>