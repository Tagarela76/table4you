<script src="{{ asset('bundles/tablemain/fancy-box/helpers/jquery.fancybox-thumbs.js') }}"></script>
{# FANCYBOX #}
<script>
    // Slider
    $(function(){
      SyntaxHighlighter.all();
    });
    $(window).load(function(){
      $('#additionalPhotos-carousel').flexslider({
        animation: "slide",
        controlNav: false,
        animationLoop: false,
        slideshow: false,
        move: 1,
        itemWidth: 138,
        itemMargin: 16,
        asNavFor: '#additionalPhotos-slider'
      });

      $('#additionalPhotos-slider').flexslider({
        animation: "slide",
        controlNav: false,
        animationLoop: false,
        slideshow: false,
        sync: "#additionalPhotos-carousel",
        start: function(slider){
          $('body').removeClass('loading');
        }
      });
      
      $('#menuPhotos-carousel').flexslider({
        animation: "slide",
        controlNav: false,
        animationLoop: false,
        slideshow: false,
        move: 1,
        itemWidth: 138,
        itemMargin: 16,
        asNavFor: '#menuPhotos-slider'
      });

      $('#menuPhotos-slider').flexslider({
        animation: "slide",
        controlNav: false,
        animationLoop: false,
        slideshow: false,
        itemWidth: 138,
        sync: "#menuPhotos-carousel",
        start: function(slider){
          $('body').removeClass('loading');
        }
      });
    });


    $(function() {       
        // Rating
        page.rating.initRating();
        
        // fancyBOX
        $("a.restaurantAdditionalPhotos").fancybox({
		prevEffect	: 'none',
		nextEffect	: 'none',
                padding: 0,
		helpers	: {
			title	: {
				type: 'outside'
			},
			thumbs	: {
				width	: 50,
				height	: 50
			}
		}
	});
        
        $("a.restaurantMenuPhotos").fancybox({
		prevEffect	: 'none',
		nextEffect	: 'none',
                padding: 0,
		helpers	: {
			title	: {
				type: 'outside'
			},
			thumbs	: {
				width	: 50,
				height	: 50
			}
		}
	});
    });

    $(document).ready(function () {
        //BAROUSEL + THSLIDE - CUSTOM NAVIGATION
        $('#barousel_thslide').barousel({
            navWrapper: '#thslide_barousel_nav .thslide_list',
            manualCarousel: 1,
            navType: 3
        });

        $('#thslide_barousel_nav').thslide({
            itemOffset: 192,
            infiniteScroll: 1
        });
    });

    $(document).ready(function () {
        //BAROUSEL + THSLIDE - CUSTOM NAVIGATION
        $('#barousel_thslide_menus').barousel({
            navWrapper: '#thslide_barousel_nav_menus .thslide_list',
            manualCarousel: 1,
            navType: 3
        });

        $('#thslide_barousel_nav_menus').thslide({
            itemOffset: 86,
            infiniteScroll: 1
        });
    });

</script> 
{# Rating #}
{% endblock %}    
